<%layout("/layouts/boilerplate") %>
<body>
  <div class="row py-4">
    <div class="col-8 offset-2">
      <h1>Create A New Listing</h1>
      <form
        action="/listings"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <div class="mb-3">
          <label for="title" class="form-label"> Title: </label>
          <input
            required
            type="text"
            name="title"
            placeholder="Enter Title"
            class="form-control"
            id="title"
          />
          <div class="valid-feedback">Title Looks Good.</div>
          <div class="invalid-feedback">Title Is Required.</div>
        </div>

        <div class="mb-3">
          <label for="description" class="form-label"> Description: </label>
          <textarea
            required
            name="description"
            placeholder="Enter Some Description"
            class="form-control"
            id="description"
          ></textarea>
          <div class="valid-feedback">Description Looks Good.</div>
          <div class="invalid-feedback">Description Is Required.</div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label"> Image URL: </label>
          <input
            class="form-control"
            id="image"
            type="text"
            name="image"
            placeholder="Enter image url"
          />
        </div>
        <div class="row">
          <div class="mb-3 col-md-4">
            <label for="price" class="form-label"> Price: </label>
            <input
              required
              class="form-control"
              id="price"
              type="number"
              name="price"
              placeholder="Enter Price"
            />
            <div class="valid-feedback">Price Looks Good.</div>
            <div class="invalid-feedback">
              Price Is Required And Should Be A Valid Number.
            </div>
          </div>
          <div class="mb-3 col-md-8">
            <label for="country" class="form-label"> Country: </label>
            <input
              required
              class="form-control"
              id="country"
              type="text"
              name="country"
              placeholder="Enter Country"
            />
            <div class="valid-feedback">Country Looks Good.</div>
            <div class="invalid-feedback">Country Is Required.</div>
          </div>
        </div>
        <div class="mb-3">
          <label for="location" class="form-label"> Location: </label>
          <input
            required
            class="form-control"
            id="location"
            type="text"
            name="location"
            placeholder="Enter Location"
          />
          <div class="valid-feedback">Location Looks Good.</div>
          <div class="invalid-feedback">Location Is Required.</div>
        </div>

        <button class="btn btn-dark primary-btn">Add</button>
      </form>
    </div>
  </div>
</body>
